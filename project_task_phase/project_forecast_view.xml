<odoo>
    <data>

        <record id="project_view_form_inherit_project_forecast_inh05022016"
                model="ir.ui.view">
            <field name="name">project.view.form.inherit.project.forecast
            </field>
            <field name="model">project.project</field>
            <field name="inherit_id"
                   ref="project_forecast.project_view_form_inherit_project_forecast"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='%(project_forecast.project_forecast_action_project)d']"
                       position="replace"/>
            </field>
        </record>

        <!-- tree view -->
        <record id="project_forecast_view_tree_inh17112015" model="ir.ui.view">
            <field name="name">project.forecast.tree</field>
            <field name="model">project.forecast</field>
            <field name="inherit_id"
                   ref="project_forecast.project_forecast_view_tree"/>
            <field name="arch" type="xml">
                <field name="project_id" position="after">
                    <field name="phase_id"/>
                </field>
            </field>
        </record>

        <!-- form view -->
        <record id="project_forecast_view_form_inh17112015" model="ir.ui.view">
            <field name="name">project.forecast.form</field>
            <field name="model">project.forecast</field>
            <field name="inherit_id"
                   ref="project_forecast.project_forecast_view_form"/>
            <field name="arch" type="xml">
                <field name="project_id" position="after">
                    <field name="phase_id"/>
                </field>
            </field>
        </record>

        <!-- search view -->
        <record id="project_forecast_view_search_inh17112015"
                model="ir.ui.view">
            <field name="name">project.forecast.search</field>
            <field name="model">project.forecast</field>
            <field name="inherit_id"
                   ref="project_forecast.project_forecast_view_search"/>
            <field name="arch" type="xml">
                <field name="project_id" position="after">
                    <field name="phase_id"/>
                </field>
                <filter name="group_by_task_id" position="after">
                    <filter name="group_by_phase_id" string="Phase"
                            context="{'group_by': 'phase_id'}"/>
                </filter>
            </field>
        </record>

        <!-- Menu records -->
        <record id="project_forecast.project_forecast_action_by_user"
                model="ir.actions.act_window">
            <field name="name">Forecast by user</field>
            <field name="res_model">project.forecast</field>
            <field name="view_mode">tree,form,pivot,graph</field>
            <field name="context">{'group_by':
                ['user_id','phase_id','project_id'],}
            </field>
        </record>

        <record id="project_forecast.project_forecast_action_by_project"
                model="ir.actions.act_window">
            <field name="name">Forecast by project</field>
            <field name="res_model">project.forecast</field>
            <field name="view_mode">tree,form,pivot,graph</field>
            <field name="context">{'group_by':
                ['project_id','phase_id','user_id'],}
            </field>
        </record>

        <record id="project_forecast.project_forecast_action_report_activities"
                model="ir.actions.act_window">
            <field name="name">Forecast</field>
            <field name="res_model">project.forecast</field>
            <field name="view_mode">pivot,tree,form,graph</field>
            <field name="context">{'group_by':
                ['user_id','phase_id','project_id'],}
            </field>
        </record>

        <!-- new one without filter -->
        <record id="project_forecast_action_report_all_activities"
                model="ir.actions.act_window">
            <field name="name">Forecast</field>
            <field name="res_model">project.forecast</field>
            <field name="view_mode">graph,pivot</field>
            <field name="context">{}</field>
        </record>

        <menuitem id="project_forecast_report_all_activities"
                  name="Team workload"
                  parent="base.menu_main_pm"
                  groups="project.group_project_manager,project.group_project_user"
                  action="project_forecast_action_report_all_activities"/>

        <menuitem id="project_forecast_report_all_activities2"
                  name="Team workload"
                  parent="hr_attendance.timesheet_menu_root"
                  groups="project.group_project_manager,project.group_project_user"
                  action="project_forecast_action_report_all_activities"/>

        <!-- for maintenance bhc -->
        <record id="project_forecast_action_report_all_activities_bhc"
                model="ir.actions.act_window">
            <field name="name">Forecast</field>
            <field name="res_model">project.forecast</field>
            <field name="view_mode">graph,tree,form,pivot</field>
            <field name="context">{}</field>
        </record>

        <menuitem id="project_forecast_report_all_activities_bhc"
                  name="Team workload"
                  parent="base.menu_main_pm"
                  groups="hr_update.group_invisible"
                  action="project_forecast_action_report_all_activities_bhc"/>

    </data>
</odoo>